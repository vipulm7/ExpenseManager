<resources>
	<!-- Base application theme. -->
	<style name="Theme.ExpenseManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">#62A3BA</item>
		<item name="colorPrimaryVariant">#72CBE4</item>
		<item name="colorOnPrimary">#524110</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">#154b5e</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">#139BC2</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">#154b5e</item>

		<!-- Customize your theme here. -->
		<item name="bottomSheetDialogTheme">@style/Theme.Design.Light.BottomSheetDialog</item>
		<item name="cardBackgroundColor">@color/white</item>
		<item name="chipBackgroundColor">#154b5e</item>
		<item name="android:textColor">#1a74a1</item>

		<item name="backgroundSplit">#C6E6E8</item>
		<item name="android:actionModeBackground">@color/cyan_dark</item>
		<item name="android:colorPrimary">#154b5e</item>
		<item name="colorBackgroundFloating">@color/white</item>

	</style>

	<style name="DialogAnimation">
		<item name="android:windowEnterAnimation">@anim/slide_up</item>
		<item name="android:windowExitAnimation">@anim/slide_down</item>
	</style>

	<style name="Theme.ExpenseManager.Starting" parent="Theme.SplashScreen">
		<item name="postSplashScreenTheme">@style/Theme.ExpenseManager</item>
		<item name="windowSplashScreenBackground">#040B19</item>
	</style>
</resources>
