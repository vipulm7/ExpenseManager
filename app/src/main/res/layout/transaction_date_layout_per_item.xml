<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TD_date_lpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="27 Jan, 2022 Friday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/TD_income_lpi"
        android:padding="3dp"
        app:layout_constraintHorizontal_bias="0.5"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="@id/TD_date_lpi"
        app:layout_constraintTop_toBottomOf="@id/TD_date_lpi"
        app:layout_constraintEnd_toEndOf="@id/TD_date_lpi"
        android:background="@color/cyan"
        />

    <TextView
        android:id="@+id/TD_income_lpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:padding="3dp"
        android:text="Income"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/TD_expense_lpi"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@id/TD_date_lpi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TD_expense_lpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="3dp"
        android:text="Expense"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@id/TD_income_lpi"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>