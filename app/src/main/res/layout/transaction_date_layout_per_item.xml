<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/rc_top"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    >

    <TextView
        android:id="@+id/TD_date_lpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="3dp"
        android:text="27 Jan, 2022"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/TD_income_lpi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/cyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/TD_date_lpi"
        app:layout_constraintTop_toBottomOf="@id/TD_date_lpi" />

    <TextView
        android:id="@+id/TD_income_lpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="Income"
        android:layout_marginEnd="5dp"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/TD_expense_lpi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TD_expense_lpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:padding="3dp"
        android:text="Expense"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>