<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CategoryFragment"
    android:background="?backgroundSplit"
    >

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/catTabLayout"
            app:tabInlineLabel="true"
            app:tabTextColor="?android:textColor"
            app:tabSelectedTextColor="@color/cyan_dark"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Small"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/catTabLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/catViewPager"
            android:layout_marginTop="10dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>