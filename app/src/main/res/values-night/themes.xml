<resources>
	<!-- Base application theme. -->
	<style name="Theme.ExpenseManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">#004377</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/black</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_200</item>
		<item name="colorOnSecondary">#16488F</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimary</item>

		<item name="cardBackgroundColor">#102C41</item>
		<item name="chipBackgroundColor">#102C41</item>
		<item name="android:textColor">@color/white</item>

		<item name="backgroundSplit">#010D12</item>
		<item name="android:actionModeBackground">?colorPrimary</item>
		<item name="colorBackgroundFloating">#0D3639</item>

	</style>

	<style name="custom" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:background">#1a74a1</item>
		<item name="android:backgroundSplit">#154b5e</item>
	</style>

	<style name="DialogAnimation">
		<item name="android:windowEnterAnimation">@anim/slide_up</item>
		<item name="android:windowExitAnimation">@anim/slide_down</item>
	</style>

	<style name="Theme.ExpenseManager.Starting" parent="Theme.SplashScreen">
		<item name="postSplashScreenTheme">@style/Theme.ExpenseManager</item>
		<item name="windowSplashScreenBackground">#040B19</item>
	</style>
</resources>
