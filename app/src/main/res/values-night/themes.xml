<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#62A3BA</item>
        <item name="colorPrimaryVariant">#B283E1</item>
        <item name="colorOnPrimary">@android:color/background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#BFEDF1</item>
        <item name="colorSecondaryVariant">#BA1F54</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="cardBackgroundColor">#0D3639</item>
        <item name="chipBackgroundColor">#012C30</item>
        <item name="android:textColor">@color/white</item>

        <item name="backgroundSplit">#010D12</item>
        <item name="android:actionModeBackground">@android:color/holo_green_light</item>
        <item name="colorBackgroundFloating">#0D3639</item>

    </style>

    <style name="custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#1a74a1</item>
        <item name="android:backgroundSplit">#154b5e</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>
