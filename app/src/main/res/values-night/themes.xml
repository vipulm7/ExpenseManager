<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpenseManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#5E1EBA</item>
        <item name="colorPrimaryVariant">#B283E1</item>
        <item name="colorOnPrimary">@android:color/background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F3F1EF</item>
        <item name="colorSecondaryVariant">#BA1F54</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="cardBackgroundColor">#008080</item>
        <item name="chipBackgroundColor">#B283E1</item>
        <item name="android:textColor">@color/white</item>

        <item name="backgroundSplit">#232323</item>
        <item name="android:actionModeBackground">@android:color/holo_green_light</item>

    </style>
</resources>
